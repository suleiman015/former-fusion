---
interface Props {
  title: string;
  excerpt?: string;
  date: Date;
  tag?: string;
  featured?: boolean;
  slug: string;
}

const { title, excerpt, date, tag = "Article", featured = false, slug } = Astro.props;

// Format date
const formattedDate = date.toLocaleDateString('de-DE', { 
  year: 'numeric', 
  month: 'long', 
  day: 'numeric' 
});
---

<article class={`blog-card ${featured ? 'featured-card' : ''}`} tabindex="0">
  <span class={`blog-tag ${featured ? 'featured-tag' : ''}`}>
    {featured ? 'ðŸ”¥ Featured' : tag}
  </span>
  <h2 class="blog-title">
    <a href={`/blog/${slug}`}>{title}</a>
  </h2>
  {excerpt && <p class="blog-excerpt">{excerpt}</p>}
  <div class="blog-meta">
    <div class="blog-date">
      <span>ðŸ“…</span>
      <span>{formattedDate}</span>
    </div>
    <a href={`/blog/${slug}`} class="read-more">
      Weiterlesen <span>â†’</span>
    </a>
  </div>
</article>

<style>
  .blog-card {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: 2rem;
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
  }

  .blog-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    border-color: rgba(255, 255, 255, 0.2);
  }

  .blog-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    transition: left 0.6s;
  }

  .blog-card:hover::before {
    left: 100%;
  }

  .blog-tag {
    display: inline-block;
    padding: 0.4rem 1rem;
    background: rgba(96, 165, 250, 0.2);
    color: #60a5fa;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    margin-bottom: 1rem;
    backdrop-filter: blur(5px);
  }

  .featured-tag {
    background: rgba(250, 204, 21, 0.2);
    color: #facc15;
  }

  .blog-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .blog-title a {
    color: #ffffff;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .blog-title a:hover {
    color: #60a5fa;
  }

  .blog-excerpt {
    color: #cbd5e1;
    margin-bottom: 1.5rem;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .blog-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .blog-date {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #94a3b8;
    font-size: 0.9rem;
  }

  .read-more {
    color: #60a5fa;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    display: flex;
    align-items: center;
    gap: 0.3rem;
    transition: transform 0.2s ease;
  }

  .read-more:hover {
    transform: translateX(3px);
  }

  .featured-card {
    background: linear-gradient(135deg, rgba(96, 165, 250, 0.1), rgba(59, 130, 246, 0.05));
    border-color: rgba(96, 165, 250, 0.2);
  }

  @media (max-width: 768px) {
    .blog-card {
      padding: 1.5rem;
    }

    .blog-title {
      font-size: 1.3rem;
    }
  }

  @media (max-width: 480px) {
    .blog-card {
      padding: 1.25rem;
    }

    .blog-title {
      font-size: 1.2rem;
    }

    .blog-excerpt {
      -webkit-line-clamp: 2;
    }
  }
</style>
