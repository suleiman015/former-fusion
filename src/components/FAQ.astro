<style>
  /* FAQ Section Styles */
  .faq-section {
    background: #000000;
    padding: 4rem 2rem;
  }

  .faq-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .faq-title {
    font-size: 2.5rem;
    color: white;
    margin-bottom: 3rem;
    text-align: left;
    font-family: inherit;
    line-height: 1.2;
  }

  .faq-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .faq-item {
    background: #111827;
    padding: 2rem;
    border-radius: 0.5rem;
    font-family: inherit;
    transition: all 0.3s ease;
  }

  .faq-item:hover {
    background: #1f2937;
  }

  .faq-question {
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    min-height: 48px;
    padding: 0.5rem 0;
  }

  .faq-question h3 {
    color: white;
    font-size: 1.25rem;
    margin: 0;
    font-family: inherit;
    line-height: 1.3;
    flex: 1;
    padding-right: 1rem;
  }

  .faq-arrow {
    color: white;
    font-size: 1.5rem;
    transition: transform 0.3s ease;
    min-width: 24px;
    text-align: center;
  }

  .faq-answer {
    color: #94a3b8;
    margin-top: 1rem;
    line-height: 1.6;
    font-family: inherit;
    display: none;
  }

  .faq-answer p {
    margin-bottom: 1rem;
  }

  .faq-answer p:last-child {
    margin-bottom: 0;
  }

  /* FAQ CTA Section */
  .faq-cta {
    background: #000000;
    padding: 4rem 1rem;
    text-align: center;
  }

  .faq-cta h2 {
    color: white;
    font-size: 4rem;
    font-weight: 800;
    margin-bottom: 1.2rem;
    letter-spacing: -2px;
    line-height: 1.1;
  }

  .faq-cta-subtitle {
    color: #cbd5e1;
    font-size: 1.3rem;
    margin-bottom: 2.5rem;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.4;
  }

  .faq-cta-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    background: #2563eb;
    color: white;
    padding: 1.1rem 1.5rem;
    border-radius: 0.4rem;
    text-decoration: none;
    font-size: 1.1rem;
    font-weight: 700;
    box-shadow: 0 2px 8px #2563eb55;
    transition: all 0.3s ease;
    min-height: 40px;
    width: auto;
    max-width: 350px;
    margin: 0 auto;
  }

  .faq-cta-btn:hover {
    background: #1741b6;
    transform: translateY(-2px);
    box-shadow: 0 4px 16px #2563eb66;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .faq-section {
      padding: 3rem 1rem;
    }

    .faq-title {
      font-size: 2rem;
      text-align: center;
      margin-bottom: 2rem;
    }

    .faq-item {
      padding: 1.5rem;
    }

    .faq-question h3 {
      font-size: 1.1rem;
      line-height: 1.4;
    }

    .faq-arrow {
      font-size: 1.3rem;
    }

    .faq-cta {
      padding: 3rem 1rem;
    }

    .faq-cta h2 {
      font-size: 2.5rem;
      letter-spacing: -1px;
    }

    .faq-cta-subtitle {
      font-size: 1.1rem;
      margin-bottom: 2rem;
    }

    .faq-cta-btn {
      padding: 1rem 2rem;
      font-size: 1.1rem;
      width: 100%;
      max-width: 300px;
    }
  }

  @media (max-width: 480px) {
    .faq-section {
      padding: 2rem 0.8rem;
    }

    .faq-title {
      font-size: 1.8rem;
    }

    .faq-item {
      padding: 1.2rem;
    }

    .faq-question {
      padding: 0.3rem 0;
    }

    .faq-question h3 {
      font-size: 1rem;
    }

    .faq-cta h2 {
      font-size: 2rem;
    }

    .faq-cta-subtitle {
      font-size: 1rem;
    }

    .faq-cta-btn {
      padding: 0.9rem 1.5rem;
      font-size: 1rem;
    }
  }

  /* Touch-friendly improvements */
  @media (hover: none) and (pointer: coarse) {
    .faq-question {
      min-height: 56px;
    }

    .faq-cta-btn {
      min-height: 56px;
    }
  }
</style>

<script>
  // Add click handlers to toggle FAQ answers
  document.addEventListener('DOMContentLoaded', () => {
    const faqItems = document.querySelectorAll('.faq-item');
    
    faqItems.forEach(item => {
      const question = item.querySelector('.faq-question') as HTMLElement | null;
      const answer = item.querySelector('.faq-answer') as HTMLElement | null;
      const arrow = question ? question.querySelector('.faq-arrow') as HTMLElement | null : null;
      
      if(question && answer && arrow) {
        question.addEventListener('click', () => {
          const isOpen = answer.style.display === 'block';
          
          // Toggle answer visibility
          answer.style.display = isOpen ? 'none' : 'block';
          
          // Rotate arrow
          arrow.style.transform = isOpen ? 'rotate(0deg)' : 'rotate(180deg)';
        });
      }
    });
  });
</script>
