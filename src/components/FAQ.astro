<script>
  // Add click handlers to toggle FAQ answers
  document.addEventListener('DOMContentLoaded', () => {
    const faqItems = document.querySelectorAll('[style*="background:#111827"]');
    
    faqItems.forEach(item => {
      const question = item.querySelector('[style*="justify-content:space-between"]') as HTMLElement | null;
      const answer = item.querySelector('[style*="color:#94a3b8"]') as HTMLElement | null;
      const arrow = question ? question.querySelector('span') as HTMLElement | null : null;
      
      // Initially hide answers
      if(answer) answer.style.display = 'none';
      
      if(question) question.addEventListener('click', () => {
        const isOpen = answer && answer.style.display === 'block';
        
        // Toggle answer visibility
        if(answer) answer.style.display = isOpen ? 'none' : 'block';
        
        // Rotate arrow
        if(arrow) arrow.style.transform = isOpen ? 'rotate(0deg)' : 'rotate(180deg)';
      });
    });
  });
</script>
